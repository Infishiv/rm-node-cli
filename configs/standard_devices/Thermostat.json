{
  "name": "Thermostat",
  "type": "esp.device.thermostat",
  "params": [
    {
      "name": "Name",
      "type": "esp.param.name",
      "properties": ["read", "write"],
      "data_type": "string",
      "default_value": "Thermostat",
      "bounds": {
        "min": 1,
        "max": 32,
        "step": 1
      }
    },
    {
      "name": "Current Temperature",
      "type": "esp.param.temperature",
      "properties": ["read", "time_series"],
      "data_type": "float",
      "default_value": 22.0,
      "bounds": {
        "min": -10,
        "max": 50,
        "step": 0.1
      },
      "ui_type": "esp.ui.text"
    },
    {
      "name": "Target Temperature",
      "type": "esp.param.temperature",
      "properties": ["read", "write"],
      "data_type": "float",
      "default_value": 22.0,
      "bounds": {
        "min": 10,
        "max": 35,
        "step": 0.5
      },
      "ui_type": "esp.ui.slider"
    },
    {
      "name": "Mode",
      "type": "esp.param.mode",
      "properties": ["read", "write"],
      "data_type": "string",
      "default_value": "Heat",
      "valid_strs": ["Off", "Heat", "Cool", "Auto"],
      "ui_type": "esp.ui.dropdown"
    }
  ]
}